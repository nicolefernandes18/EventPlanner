<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.eventplanner.DashboardActivity"
    tools:showIn="@layout/app_bar_dashboard">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:elevation="10dp"
            android:background="@drawable/theme2"
            android:paddingTop="16dp"
            >
            <ImageView
                android:id="@+id/dashboard_icon"
                android:paddingLeft="8dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@mipmap/cake1"/>
            <TextView
                android:id="@+id/dashboard_uname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dashboard_icon"
                android:text="Nicole"
                android:textSize="20sp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/dashboard_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dashboard_icon"
                android:layout_below="@+id/dashboard_uname"
                android:text="Birthday"
                android:textSize="20sp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/dashboard_venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dashboard_icon"
                android:text="Mumbai"
                android:layout_below="@+id/dashboard_type"
                android:textSize="20sp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/dashboard_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dashboard_icon"
                android:text="07:00"
                android:layout_below="@+id/dashboard_venue"
                android:textSize="20sp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/dashboard_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dashboard_times"
                android:text="17-03-18"
                android:layout_below="@+id/dashboard_venue"
                android:textSize="20sp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:textColor="#000000"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="10dp"
            android:background="@drawable/theme"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/dashboard_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TASKS"
                android:textSize="16sp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:textColor="#000000" />
            <ProgressBar
                android:id="@+id/simpleProgressBar"
                android:layout_width="fill_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_height="24dp"
                android:progress="30"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

            <TextView
                android:id="@+id/dashboard_guests_invited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GUESTS INVITED"
                android:textSize="16sp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:textColor="#000000" />
            <ProgressBar
                android:id="@+id/simpleProgressBar2"
                android:layout_width="fill_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_height="24dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progress="50"/>
            <TextView
                android:id="@+id/dashboard_shopping_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHOPPING ITEM"
                android:textSize="16sp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:textColor="#000000" />
            <ProgressBar
                android:id="@+id/simpleProgressBar3"
                android:layout_width="fill_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_height="24dp"
                android:progress="75"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="10dp"
            android:background="@drawable/theme"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/relativeLayout"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/dashboard_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REMAINING TIME"
                    android:textSize="16sp"
                    android:paddingBottom="8dp"
                    android:textColor="#000000" />

                <LinearLayout
                    android:id="@+id/LinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dashboard_time"
                    android:gravity="center"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:id="@+id/LinearLayout10"

                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/counter"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp" >

                        <TextView
                            android:id="@+id/txtTimerDay"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#4a0000"
                            android:textSize="35dp"
                            android:textStyle="bold"
                            android:text="10"/>

                        <TextView
                            android:id="@+id/txt_TimerDay"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Days"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout11"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/counter"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/txtTimerHour"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#4a0000"
                            android:textSize="35dp"
                            android:textStyle="bold"
                            android:text="20"/>

                        <TextView
                            android:id="@+id/txt_TimerHour"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Hours"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout12"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/counter"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/txtTimerMinute"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#4a0000"
                            android:textSize="35dp"
                            android:textStyle="bold"
                            android:text="56"/>

                        <TextView
                            android:id="@+id/txt_TimerMinute"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Minutes"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout13"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/counter"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/txtTimerSecond"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#4a0000"
                            android:textSize="35dp"
                            android:textStyle="bold"
                            android:text="34"/>

                        <TextView
                            android:id="@+id/txt_TimerSecond"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Seconds"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
